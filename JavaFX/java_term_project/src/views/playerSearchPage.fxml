                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="countrywisePlayerCountButton" mnemonicParsing="false" onAction="#countrywisePlayerCount" styleClass="commonButton" text="Countrywise Player Count">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="backToMainButton" mnemonicParsing="false" onAction="#backToMain" styleClass="commonButton" text="Back To Main Menu">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
