<AnchorPane fx:id="playerSearchPage" prefHeight="500.0" prefWidth="600.0" styleClass="otherPage" stylesheets="@../values/styles.css" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" fx:controller="controllers.PlayerSearchPageController">
    <children>
        <Label alignment="BASELINE_CENTER" layoutX="184.0" layoutY="31.0" text="Search By Players" textFill="#ece8e8">
            <font>
                <Font name="Calibri Bold Italic" size="32.0" />
            </font>
        </Label>
        <Label alignment="BASELINE_CENTER" layoutX="173.0" layoutY="86.0" styleClass="commonFontForTitles" stylesheets="@../values/styles.css" text="Search by any criterion:" textFill="#d7c3c3" />
        <VBox alignment="BASELINE_CENTER" layoutX="151.0" layoutY="142.0" prefHeight="343.0" prefWidth="298.0" styleClass="mainMenuVbox">
            <children>
                <Button fx:id="searchByPlayerNameButton" mnemonicParsing="false" onAction="#searchByPlayerNameInput" styleClass="commonButton" stylesheets="@../values/styles.css" text="Player Name">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
                <Button fx:id="searchByCountryButton" mnemonicParsing="false" onAction="#searchByCountryNameInput" styleClass="commonButton" stylesheets="@../values/styles.css" text="Country">
