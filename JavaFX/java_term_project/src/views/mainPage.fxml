<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPage" prefHeight="500.0" prefWidth="600.0" styleClass="mainPage" stylesheets="@../values/styles.css" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" fx:controller="controllers.MainPageController">
    <children>
        <VBox fx:id="mainMenuVbox" alignment="BASELINE_CENTER" layoutX="192.0" layoutY="228.0" prefHeight="226.0" prefWidth="214.0" styleClass="mainMenuVbox" stylesheets="@../values/styles.css">
            <children>
                <Button fx:id="playerSearchButton" mnemonicParsing="false" onAction="#searchPlayer" styleClass="commonButton" stylesheets="@../values/styles.css" text="Search By Players" textAlignment="CENTER">
                    <font>
                        <Font name="Calibri Bold" size="20.0" />
                    </font>
                </Button>
                <Button fx:id="clubSearchButton" mnemonicParsing="false" onAction="#searchClubs" styleClass="commonButton" stylesheets="@../values/styles.css" text="Search In Club" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                    <font>
                        <Font name="Calibri Bold" size="20.0" />
                    </font>
                </Button>
            <Button fx:id="playerMarketButton" alignment="BASELINE_CENTER" mnemonicParsing="false" onAction="#handlePlayerMarketButton" styleClass="commonButton" text="Player Market">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exit" styleClass="commonButton" stylesheets="@../values/styles.css" text="Logout">
                    <font>
                        <Font name="Calibri Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
        <Label fx:id="mainPageTitle" alignment="BASELINE_CENTER" contentDisplay="CENTER" layoutX="150.0" layoutY="37.0" text="Football Manager" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Calibri Bold Italic" size="40.0" />
            </font>
        </Label>
        <Label fx:id="mainPageSubtitle" layoutX="110.0" layoutY="169.0" text="Explore The Player Database" textFill="#ddffff">
            <font>
                <Font name="Calibri Bold" size="32.0" />
            </font>
        </Label>
      <Label fx:id="clubNameLabel" layoutX="260.0" layoutY="110.0" styleClass="commonFontForTitles" text="Label" />
    </children>
</AnchorPane>
