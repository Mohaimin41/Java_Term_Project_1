<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="playerSearchPage" prefHeight="500.0" prefWidth="600.0" styleClass="otherPage" stylesheets="@../values/styles.css" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" fx:controller="controllers.ClubSearchPageController">
    <children>
        <Label alignment="BASELINE_CENTER" layoutX="206.0" layoutY="61.0" text="Search In Club" textFill="#ece8e8">
            <font>
                <Font name="Calibri Bold Italic" size="32.0" />
            </font>
        </Label>
        <VBox alignment="BASELINE_CENTER" layoutX="113.0" layoutY="142.0" prefHeight="302.0" prefWidth="374.0" styleClass="mainMenuVbox">
            <children>
                <Button fx:id="maxSalaryInClubButton" mnemonicParsing="false" onAction="#searchByMaxSalary" styleClass="commonButton" stylesheets="@../values/styles.css" text="Player(s) with Maximum Salary">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
                <Button fx:id="maxAgeInClubButton" mnemonicParsing="false" onAction="#searchByMaxAge" styleClass="commonButton" stylesheets="@../values/styles.css" text="Player(s) with Maximum Age">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="maxHeightInClubButton" mnemonicParsing="false" onAction="#searchByMaxHeight" styleClass="commonButton" text="Player(s) with Maximum Height">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="totalYearlySalaryButton" mnemonicParsing="false" onAction="#findTotalYearlySalary" styleClass="commonButton" text="Total Yearly Salary">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="backToMainButton" mnemonicParsing="false" onAction="#handleBackToMain" styleClass="commonButton" text="Back To Main Menu">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
